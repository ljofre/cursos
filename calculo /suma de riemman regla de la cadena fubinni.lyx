\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\int_{-1}^{1}\int_{-1}^{1}\frac{y}{x+2}dxdy & = & \lim_{\left(m,n\right)\to\left(\infty,\infty\right)}\left(1-3^{-\frac{1}{n}}\right)\frac{n}{m}\\
 & = & \left(1-1\right)\,1\\
 & = & 0
\end{eqnarray*}

\end_inset


